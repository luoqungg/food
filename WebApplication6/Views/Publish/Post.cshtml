@model WebApplication6.Models.Post
@{
    ViewBag.Title = "Post";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<style>
    .textbox {
        width: 200px;
    }

    .textbox1 {
        width: 400px;
        height: 200px;
    }
</style>
<body @*style="background-image: url('../../images/beijing4.jpg'); width:100%;height :100%;"*@>
    <h2>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;发布帖子</h2>
    @using (Html.BeginForm("Post", "Publish", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div style="position:absolute;left:300px;top:150px;">
            @Html.Label("帖子主题");
            <br />
            @Html.TextBoxFor(n => n.Post_title, new { @class = "textbox" })
            <br />
            @Html.Label("帖子内容");
            <br />
            @Html.TextAreaFor(n => n.Post_content, new { @class = "textbox1", style = "resize:none;max-width:800px;", placeholder = "帖子内容最长200字" })
            <br />
            <input type="file" name="img" value="上传图片"/>
            <input type="submit" value="提交">
        </div>
    }

</body>

