@model WebApplication6.Models.Video
@{
                /**/

                ViewBag.Title = "Video";
                Layout = "~/Views/Shared/_Layout2.cshtml";
}
<style>
    .textbox {
        width: 200px;
    }

    .textbox1 {
        width: 400px;
        height: 200px;
    }
</style>
<h2>
    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;发布视频
</h2>
<body>
    <div class="container">
        @using (Html.BeginForm("Video", "Publish", new { area = "" }, FormMethod.Post, new { id = "", enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            <div class="table-responsive" style="padding-top:15px;">
                <table class="table">
                    <tbody>
                        <tr>
                            <td colspan="1"><h4>视频标题</h4></td>
                            <td colspan="3">
                                @*@Html.EditorFor(model => model.Vi_title, new { htmlAttributes = new { @class = "form-control", @placeholder = "视频标题" } })*@
                                @Html.TextBoxFor(model => model.Video_lable, new { @class = "form-control", @placeholder = "视频标题" })
                                @Html.ValidationMessageFor(model => model.Video_lable, "", new { @class = "text-danger" })
                            </td>
                        </tr>
                        <tr>
                            <td><h4>上传视频</h4></td>
                            <td colspan="2">
                                <input type="file" name="VideoFile" />
                                @*<span class="shangchuan">点击上传视频</span>*@
                            </td>
                        </tr>
                        <tr>
                            <td><h4>视频简介</h4></td>
                            <td colspan="2">
                                @Html.TextAreaFor(model => model.Video_decription, new { htmlAttributes = new { @class = "form-control" } })
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <h4>选择封面</h4>
                            </td>
                            <td>
                                <input type="file" name="img" />
                            </td>
                        </tr>
                        <tr>
                            <td colspan="3">
                                <input type="submit" value="发布" class="btn btn-info btn-lg" />
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        }
    </div>
</body>